pipeline {
    agent {
        docker {
            label 'docker'
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Build Image') {
            steps {
                
                git 'https://github.com/Junaid1055/Neogym.git'
                
                script {
                    docker.build('mygymapp') // Set your desired image name
                }
            }
        }
        stage('Push Image to Docker Hub') {
            steps {
               
                withCredentials([usernamePassword(credentialsId: 'mydockeruser', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')]) {
                    script {
                        docker.withRegistry('https://index.docker.io/v1/', 'mydockeruser') {
                            
                            docker.image('my-nginx-image').push("${env.BUILD_NUMBER}")
                            docker.image('my-nginx-image').push('latest')
                        }
                    }
                }
            }
        }
    }
}

